@{
    ViewBag.Title = "Devices";
}

<head>
  <meta name="description" content="Dashboard for displaying sensor information">
  <meta name="author" content="Xiaoyi Huang - HappyFarmer Team">
</head>

<body>
<!-- Header -->
<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
  <div class="container-fluid">
    <div class="header-body">
      
      <!-- First Row Content-->
      <div class="row mt-5">
